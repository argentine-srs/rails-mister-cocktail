<div class="container">
  <h2><%= @cocktail.name %></h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li class="flex"><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %><i class="far fa-trash-alt"></i><% end %></li>

      <%#= link_to "Delete this ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </ul>
  <hr>
  <%= render "doses/new" %>
  <div><%= link_to "Back to all cocktails", cocktails_path %></div>
</div>

